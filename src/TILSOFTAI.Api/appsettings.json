{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Server=localhost;Database=TILSOFTAI;User Id=sa;Password=${SQL_PASSWORD};Connection Timeout=60;TrustServerCertificate=True;"
  },
  "LmStudio": {
    "BaseUrl": "http://192.168.8.247:6688",
    "Model": "TILSOFT-AI",
    "TimeoutSeconds": 300,
    "ModelMap": {
      "TILSOFT-AI": "qwen/qwen3-vl-30b"
    }
  },
  "RateLimiting": {
    "RequestsPerMinute": 120,
    "BlockDurationSeconds": 30
  },
  "AnalyticsDatasetStore": {
    "Provider": "redis",
    "TtlMinutes": 60,
    "RedisConnection": "${REDIS_CONNECTION}"
  },
  "AnalyticsResultCache": {
    "Provider": "redis",
    "TtlMinutes": 10,
    "RedisConnection": "${REDIS_CONNECTION}"
  },
  "ChatTuning": {
    "ToolCallTemperature": 0.1,
    "SynthesisTemperature": 0.2,
    "NoToolsTemperature": 0.3,
    "MaxRoutingContextChars": 1200
  },
  "Sql": {
    "CommandTimeoutSeconds": 180
  }
}

