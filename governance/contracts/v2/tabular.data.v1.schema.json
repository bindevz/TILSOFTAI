{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tilsoftai://contracts/tabular.data.v1",
  "title": "tabular.data.v1",
  "description": "Schema-carrying tabular dataset (no domain DTO).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "columns",
    "rows"
  ],
  "properties": {
    "columns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "integer",
            "enum": [
              0,
              1,
              2,
              3,
              4,
              5
            ],
            "description": "TabularType enum: 0=String,1=Int32,2=Double,3=Decimal,4=Boolean,5=DateTime"
          }
        }
      }
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": [
            "string",
            "number",
            "boolean",
            "object",
            "array",
            "null"
          ]
        }
      }
    },
    "totalCount": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 0
    }
  }
}
