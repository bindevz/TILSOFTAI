{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tilsoftai://contracts/atomic.catalog.search.v1",
  "title": "atomic.catalog.search.v1 response",
  "description": "Governed search over stored procedure catalog (supports multilingual intents).",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "kind",
    "schemaVersion",
    "generatedAtUtc",
    "resource",
    "data",
    "warnings"
  ],
  "properties": {
    "kind": {
      "const": "atomic.catalog.search.v1"
    },
    "schemaVersion": {
      "const": 2
    },
    "generatedAtUtc": {
      "type": "string"
    },
    "resource": {
      "const": "atomic.catalog.search"
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "query",
        "topK",
        "results"
      ],
      "properties": {
        "query": {
          "type": "string",
          "minLength": 1
        },
        "topK": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20
        },
        "results": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": [
              "spName"
            ],
            "properties": {
              "spName": {
                "type": "string",
                "minLength": 1
              },
              "domain": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "entity": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "tags": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "score": {
                "type": "integer"
              },
              "intent": {
                "type": "object",
                "additionalProperties": true
              },
              "parameters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
